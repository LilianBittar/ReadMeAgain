<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/lily_script_one"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/frag_signin_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        android:alpha="0.9"
        android:src="@drawable/frag_signin_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/frag_signin_input_email"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/frag_signin_input"
        android:ems="10"
        android:fontFamily="@font/poppins_regular"
        android:paddingLeft="10dp"
        android:text="Enter email"
        android:textColor="@color/black"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frag_signin_logo" />

    <EditText
        android:id="@+id/frag_signin_input_password"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/frag_signin_input"
        android:ems="10"
        android:fontFamily="@font/poppins_regular"
        android:paddingLeft="10dp"
        android:text="Password"
        android:textColor="@color/black"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frag_signin_input_email" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:src="@drawable/frag_signin_invisible_icon"
        app:layout_constraintEnd_toEndOf="@+id/frag_signin_input_password"
        app:layout_constraintHorizontal_bias="0.935"
        app:layout_constraintStart_toStartOf="@+id/frag_signin_input_password"
        app:layout_constraintTop_toTopOf="@+id/frag_signin_input_password" />

    <Button
        android:id="@+id/frag_signin_button_login"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frag_signin_input_password" />

    <TextView
        android:id="@+id/frag_signin_text_continue_with"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/poppins_regular"
        android:text="or continue with"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frag_signin_button_login" />

    <ImageButton
        android:id="@+id/frag_signin_button_login_facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="#00000000"
        android:src="@drawable/facebook"
        android:text="Button"
        app:layout_constraintEnd_toStartOf="@+id/frag_signin_button_login_apple"
        app:layout_constraintHorizontal_bias="0.714"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frag_signin_text_continue_with" />

    <ImageButton
        android:id="@+id/frag_signin_button_login_apple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="#00000000"
        android:src="@drawable/apple"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="@+id/frag_signin_text_continue_with"
        app:layout_constraintStart_toStartOf="@+id/frag_signin_text_continue_with"
        app:layout_constraintTop_toBottomOf="@+id/frag_signin_text_continue_with" />

    <ImageButton
        android:id="@+id/frag_signin_button_login_google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="28dp"
        android:background="#00000000"
        android:src="@drawable/google"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.31"
        app:layout_constraintStart_toEndOf="@+id/frag_signin_button_login_apple"
        app:layout_constraintTop_toBottomOf="@+id/frag_signin_text_continue_with" />

    <TextView
        android:id="@+id/frag_signin_text_dont_have_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Don't have an account?"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frag_signin_button_login_apple" />

    <TextView
        android:id="@+id/frag_signin_text_register"
        android:layout_width="61dp"
        android:layout_height="23dp"
        android:layout_marginTop="28dp"
        android:text="Register"
        android:textColor="#0494d0"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toEndOf="@+id/frag_signin_text_dont_have_account"
        app:layout_constraintTop_toBottomOf="@+id/frag_signin_button_login_apple" />


</androidx.constraintlayout.widget.ConstraintLayout>